<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerificationActivity">

    <ImageView
        android:id="@+id/imageViewVerification1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_register_vectors"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"  />

    <TextView
        android:id="@+id/textViewVerification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_100sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:fontFamily="@font/poppins_title"
        android:text="@string/Verification"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_28sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text1Verification"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:fontFamily="@font/poppins"
        android:text="@string/Verification_text1"
        android:textAlignment="viewEnd"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewVerification" />

    <ImageView
        android:id="@+id/imageViewVerification2"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_200sdp"
        android:background="@drawable/ic_verification_vectors"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/VerificationTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:fontFamily="@font/poppins_title"
        android:text="@string/VerificationContinue"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonVerification"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:background="@null"
        app:layout_constraintBottom_toTopOf="@+id/VerificationTextButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_verification_vectors_button"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/imageViewVerification2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1Verification"
        app:layout_constraintVertical_bias="0.35">

        <EditText
            android:id="@+id/editTextNumberVerification1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/custom_border"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:inputType="numberSigned"
            android:maxLength="1"
            android:textAlignment="center"
            android:textSize="@dimen/_28sdp" />

        <EditText
            android:id="@+id/editTextNumberVerification2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/custom_border"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:inputType="numberSigned"
            android:maxLength="1"
            android:textAlignment="center"
            android:textSize="@dimen/_28sdp" />

        <EditText
            android:id="@+id/editTextNumberVerification3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/custom_border"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:inputType="numberSigned"
            android:maxLength="1"
            android:textAlignment="center"
            android:textSize="@dimen/_28sdp" />

        <EditText
            android:id="@+id/editTextNumberVerification4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/custom_border"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:inputType="numberSigned"
            android:maxLength="1"
            android:textAlignment="center"
            android:textSize="@dimen/_28sdp" />

        <EditText
            android:id="@+id/editTextNumberVerification5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/custom_border"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:inputType="numberSigned"
            android:maxLength="1"
            android:textAlignment="center"
            android:textSize="@dimen/_28sdp" />

        <EditText
            android:id="@+id/editTextNumberVerification6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/custom_border"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:inputType="numberSigned"
            android:maxLength="1"
            android:textAlignment="center"
            android:textSize="@dimen/_28sdp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>