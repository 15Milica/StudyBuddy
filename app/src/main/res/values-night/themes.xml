<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StudyBuddy" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/secondary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/secondary_color</item>
        <item name="android:navigationBarColor">@color/gray</item>
        <!-- Customize your theme here. -->

        <!-- WindowFullscreen

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>-->

        <!-- ButtonStyle -->

        <item name="buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="Theme.StudyBuddy" parent="Base.Theme.StudyBuddy" />

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_default</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>